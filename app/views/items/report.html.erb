<p><%= link_to 'Change your vote', :action => 'index' %> or 
<%= link_to 'Log out', '/logout' %>.</p>
<h1>Grouped Report</h1>
<table>
<tr>
  <th>Item</th>
  <th>Category</th>
  <th>Description</th>
  <th>Requester</th>
  <th>Bac.</th>
  <th>Kent</th>
  <th>D.O.</th>
  <th>Total</th>
  <th>Unit Cost</th>
  <th>Total Cost</th>
  <th>Rec?</th>
  <th>Funding</th>
<% if @weighting -%>
  <th>Raw Rating</th>
  <th>Weighted</th>
<% else -%>
  <th>Rating</th>
<% end -%>
  <th>Votes</th>
</tr>
<%= render :partial => "weighted", :collection => @report.items_base, :locals => { :admin => @admin, :weighting => @weighting } %>
<%= render :partial => "group", :locals => { :bgcolor => "#ffcccc", :description => "Base Items", 
  :subtotal => @report.subtotal_base, :weighting => @weighting } %>
<%= render :partial => "weighted", :collection => @report.items_high, :locals => { :admin => @admin, :weighting => @weighting } %>
<%= render :partial => "group", :locals => { :bgcolor => "#ffcccc", :description => "High Priority Items", 
  :subtotal => @report.subtotal_high, :weighting => @weighting } %>
<%= render :partial => "weighted", :collection => @report.items_medium, :locals => { :admin => @admin, :weighting => @weighting } %>
<%= render :partial => "group", :locals => { :bgcolor => "#ffcccc", :description => "Medium Priority Items", 
  :subtotal => @report.subtotal_medium, :weighting => @weighting } %>
<%= render :partial => "weighted", :collection => @report.items_low, :locals => { :admin => @admin, :weighting => @weighting } %>
<%= render :partial => "group", :locals => { :bgcolor => "#ffcccc", :description => "Low Priority Items", 
  :subtotal => @report.subtotal_low, :weighting => @weighting } %>
<%= render :partial => "weighted", :collection => @report.items_other, :locals => { :admin => @admin, :weighting => @weighting } %>
<%= render :partial => "group", :locals => { :bgcolor => "#ffcccc", :description => "Other Items", 
  :subtotal => @report.subtotal_other, :weighting => @weighting } %>
<%= render :partial => "group", :locals => { :bgcolor => "#ffcc00", :description => "All Items", 
  :subtotal => BudgetItem.grand_total, :weighting => @weighting } %>
</table>
